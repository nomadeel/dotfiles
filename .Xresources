! Colorscheme and configuration for some X apps
! URxvt.perl-ext-common: font-size

! 
! urxvt
URxvt.intensityStyles: false
URxvt.scrollBar: false
URxvt.modifier: alt
URxvt.url-launcher: /usr/bin/firefox
URxvt.saveLines: 10000
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

!! fonts
! to find xft name of a font use "fc-list | grep"
URxvt*font: xft:Envy Code R:style=Regular:size=9,\
            xft:Inziu Iosevka J
URxvt*letterSpace: -1

! Xft.autohint: 1
! Xft.lcdfilter: lcddefault
! Xft.hintstyle: hintslight
! Xft.hinting: true
! Xft.antialias: true
! Xft.rgba: rgb
! Xft.dpi: 96

